<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.watset1.iwant.IntroActivity"
    android:background="@color/splashBackground">

    <Button
        android:text="Add Item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro_button_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAdd"
        android:backgroundTint="@color/intro_button_tint"
        android:textSize="@dimen/intro_button_textsize"
        android:background="@color/intro_button_tint"
        android:layout_margin="8dp" />

    <Button
        android:text="View All Items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro_button_height"
        android:id="@+id/btnView"
        android:layout_below="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/intro_button_tint"
        android:textSize="@dimen/intro_button_textsize"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/intro_button_tint" />

    <TextView
        android:text="RECENT ITEMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvListLabel"
        android:layout_below="@+id/btnView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@color/product_item_background"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/label_text"
        android:textStyle="normal|bold"
        android:padding="8dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvListLabel"
        android:layout_centerHorizontal="true"
        android:id="@+id/lvRecent"
        android:padding="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/edittext_background"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/tvHelp" />

    <TextView
        android:text="@string/intro_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDefault"
        android:layout_below="@+id/tvListLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/intro_default_textsize"
        android:textAlignment="center"
        android:textColor="@color/label_text" />

    <TextView
        android:text="Click on Item to Edit /Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvHelp"
        android:layout_alignParentBottom="true"
        android:background="@color/product_item_background"
        android:textSize="24sp"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
</RelativeLayout>
