<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.watset1.sensorprintout.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/lvSensors" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutProximity"
        android:layout_below="@+id/lvSensors"
        android:layout_weight="1">


        <TextView
            android:text="PROXIMITY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProximityLabel"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProximity"
             />
    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvX"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/layoutAccell"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvY"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tvX"
        />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvZ"
        android:layout_below="@+id/tvY"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutAccell"
        android:layout_below="@+id/layoutProximity">
        <TextView
            android:text="ACCELLEROMETER INFORMATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAccellLabel"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>

</RelativeLayout>
