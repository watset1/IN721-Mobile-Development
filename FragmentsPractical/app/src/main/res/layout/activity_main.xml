<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.watset1.fragmentspractical.MainActivity">

    <Button
        android:text="Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtMainTitle"
        android:layout_marginStart="13dp"
        android:id="@+id/btnImage"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Fragment View"
        android:id="@+id/txtMainTitle"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/btnImage"
        android:layout_alignBottom="@+id/btnImage"
        android:layout_alignParentStart="true" />

    <Button
        android:text="List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnList"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnImage"
        android:layout_toStartOf="@+id/btnImage"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/fragment_container"></LinearLayout>
</RelativeLayout>
